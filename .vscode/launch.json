    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run MHD FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mhd_ws/run/rest_api/mhd/main.py",
            "console": "integratedTerminal",
            "cwd": "${cwd}",
            "env": {"PYTHONPATH": "${cwd}", "PYDEVD_DISABLE_FILE_VALIDATION": "1"},
            "justMyCode": false
        },
        {
            "name": "Run MHD Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mhd_ws/run/worker/mhd/main.py",
            "console": "integratedTerminal",
            "cwd": "${cwd}",
            "env": {"PYTHONPATH": "${cwd}"},
            "jinja": true,
            "justMyCode": false
        },
                {
            "name": "Python: Run Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${cwd}"},
            "justMyCode": false
        },
    ]
}
