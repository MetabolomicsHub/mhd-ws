{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run MHD FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mhd_ws/run/rest_api/mhd/main.py",
            "console": "integratedTerminal",
            "cwd": "${cwd}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "MHD_CONFIG_FILE": "mhd-ws-config.yaml",
                "MHD_CONFIG_SECRETS_FILE": "./secrets/mhd-ws-secrets.yaml"
            },
            "justMyCode": false
        },
        {
            "name": "Run MHD Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mhd_ws/run/worker/mhd/main.py",
            "console": "integratedTerminal",
            "cwd": "${cwd}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "MHD_CONFIG_FILE": "mhd-ws-config.yaml",
                "MHD_CONFIG_SECRETS_FILE": "./secrets/mhd-ws-secrets.yaml"
            },
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Run Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "justMyCode": false
        }
    ]
}
